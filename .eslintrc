{
    "root" : true,
    "parser" : "@typescript-eslint/parser",
    "plugins" : [
        "@typescript-eslint"
    ],
    "extends" : [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides" : [
        {
            "rules" : {
                "no-debugger" : "off"
            },
            "files" : "**"
        },
        {
            "files" : "*.js",
            "rules": {
                "@typescript-eslint/no-var-requires": "off"
            }
        }
    ]
}